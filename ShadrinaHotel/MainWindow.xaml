<Window x:Class="ShadrinaHotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShadrinaHotel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#f0d6d6">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Autirization"
      FontSize="20"
      FontWeight ="Bold"
      Foreground="Black"
      HorizontalAlignment="Center"
      Margin="0,10"
      FontFamily="Bahnschrift"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Login" FontWeight ="Bold" FontSize="14" Foreground="Black" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtUsername"
               Margin="0, 10, 0, 10"
               Height="35"
               Background="White"
               BorderBrush="#CCC"
               BorderThickness="2"/>
            <TextBlock Text="Password" FontWeight ="Bold" FontSize="14" Foreground="Black" HorizontalAlignment="Center" />
            <PasswordBox x:Name="txtPassword"
               Margin="0, 10, 0, 15"
               Height="35"
               Background="White"
               BorderBrush="#CCC"
               BorderThickness="2"/>
            <Button Content="Login"
              Width="120"
              Height="30"
              Background="#a8ee95"
              Foreground="#444"
              FontFamily="Bold"
              HorizontalAlignment="Center"
              Cursor="Hand"
              Margin="0, 10, 0, 10"
              BorderThickness="0" Click="Button_Click"
              />
        </StackPanel>


    </Grid>
</Window>
