<Window x:Class="ShadrinaHotel.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShadrinaHotel"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="450" Width="800" Background="#f0d6d6">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="29" Margin="321,74,0,0" TextWrapping="Wrap" Text="Change Password" VerticalAlignment="Top" Width="149" TextAlignment="Center" FontWeight="Bold" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="321,159,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="149"/>
        <TextBlock Name ="txtNewPassword" HorizontalAlignment="Left" Height="18" Margin="321,199,0,0" TextWrapping="Wrap" Text="New password" VerticalAlignment="Top" Width="109"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="321,222,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="149"/>
        <TextBlock Name ="txtCurrentPassword" HorizontalAlignment="Left" Height="18" Margin="321,263,0,0" TextWrapping="Wrap" Text="Confirm the new password" VerticalAlignment="Top" Width="149"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="321,286,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="149"/>
        <Button Content="Change password" HorizontalAlignment="Left" Height="21" Margin="342,360,0,0" VerticalAlignment="Top" Width="107" Click="Button_Click"/>
        <TextBlock x:Name ="txtNewPassword_Copy" HorizontalAlignment="Left" Height="18" Margin="321,136,0,0" TextWrapping="Wrap" Text="Current password" VerticalAlignment="Top" Width="109"/>

    </Grid>
</Window>
